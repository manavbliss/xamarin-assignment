    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Foodatory1.AddInventory">
    <ContentPage.Content>
        


             <StackLayout BackgroundColor="#FEBD59">
            <Button HorizontalOptions="Start" Margin="10,40,0,0" Clicked="back" Text=""  TextColor="#ffffff" Image="back.png"/>
             <StackLayout Margin="20">
            <Label Text="ADD INVENTORY" FontSize="25" TextColor="#ffffff" HorizontalTextAlignment="Center"/>
         
        <Entry Placeholder="Name" x:Name="name" HeightRequest="40"/>

                  <Button Text="Save" BackgroundColor="#002E62" TextColor="#ffffff"  Clicked="save" FontSize="20" HeightRequest="45" Margin="0,20,0,0" />
        </StackLayout>

         
            </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
